#! /bin/bash
#
# Get information about DSpace OrgUnit entities.
#
# Usage: dspace_org [DEPLOYMENT] [OPTIONS] [TERM...]
# Usage: dspace_org --help
#
# Each TERM argument may be an OrgUnit (department) name or an OrgUnit handle.
# With no arguments, all OrgUnits are listed.

PROGRAM=`realpath "$0"`
BIN_DIR=`dirname "$PROGRAM"`
PROGNAME=`basename "$PROGRAM"`

source "$BIN_DIR/dspace_values"

exec "$BIN_DIR/run_ruby" "$PROGNAME" "$@"
