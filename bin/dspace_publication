#! /bin/bash
#
# Get information about DSpace Publication entities.
#
# Usage: dspace_publication [DEPLOYMENT] [OPTIONS] [TERM...]
# Usage: dspace_publication --help
#
# Each TERM argument may be "author:AUTHOR_NAME", "title:TITLE_TEXT", or a
# publication handle. (A string without a prefix is assumed to be TITLE_TEXT.)
# With no arguments, all Publications are listed.

PROGRAM=`realpath "$0"`
BIN_DIR=`dirname "$PROGRAM"`
PROGNAME=`basename "$PROGRAM"`

source "$BIN_DIR/dspace_values"

exec "$BIN_DIR/run_ruby" "$PROGNAME" "$@"
