#! /bin/bash
#
# Run a command on the DSpace host.
#
# Usage: dspace_sh [DEPLOYMENT] [SSH_OPTS]                  Interactive shell.
# Usage: dspace_sh [DEPLOYMENT] [SSH_OPTS] [--] CMD [ARGS]  Remote command.

PROGRAM=`realpath "$0"`
BIN_DIR=`dirname "$PROGRAM"`

source "$BIN_DIR/dspace_values"

readonly REMOTE_HOST="$DSPACE_PRIVATE"
readonly REMOTE_USER="$USER"
readonly PRIVATE_KEY="$HOME/.ssh/id_rsa"

# =============================================================================
# Process command-line ssh options
# =============================================================================

KEY_GIVEN=''    # Whether $PRIVATE_KEY was overridden on the command line.
SSH_OPT=()      # Options passed to ssh.

while [[ $# -gt 0 ]] ; do
    case "$1" in
        --)                      shift; break ;; # Subsequent args to command.
        -i)                      SSH_OPT+=("$1" "$2"); KEY_GIVEN=true; shift ;;
        -[BbcDEeFIJLlmOopQRSWw]) SSH_OPT+=("$1" "$2"); shift ;;
        -*)                      SSH_OPT+=("$1") ;;
        *)                       break ;; # Remote command.
    esac
    shift
done

[[ "$KEY_GIVEN" ]] || SSH_OPT+=(-i "$PRIVATE_KEY")

# =============================================================================
# Run remote command (defaulting to remote login shell)
# =============================================================================

[[ $# -eq 0 ]] && echo "Login to $REMOTE_HOST"
exec ssh "${SSH_OPT[@]}" "$REMOTE_USER@$REMOTE_HOST" "$@"
